{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsc.autoDetect": "off",
  "json.schemas": [
    {
      "fileMatch": [
        "/*electron-builder.json5",
        "/*electron-builder.json"
      ],
      "url": "https://json.schemastore.org/electron-builder"
    }
  ],
  "vitest.commandLine": "npm run test",
  "vitest.include": [
    "commands/**/*.{test,spec}.{js,mjs,cjs,ts,mts,cts,jsx,tsx}"
  ],
  "vitest.exclude": [
    "**/release/**",
    "**/dist/**",
    "**/node_modules/**"
  ],
  "vitest.enable": true,
  "vitest.configSearchPatternExclude": "{**/release/**,**/dist/**,**/node_modules/**,**/.*/**,*.d.ts}"
}
